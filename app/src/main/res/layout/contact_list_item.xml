<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item"
            type="org.quynhnguyen.mobile.android.todoApp.model.Contact" />
        <variable
            name="controller"
            type="org.quynhnguyen.mobile.android.todoApp.DetailViewActivity" />
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/displayName"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@{item.displayName}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="15dp" />
        <Button
            android:focusable="false"
            android:background="@drawable/outline_textsms_24"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="15dp"
            android:layout_gravity="end"
            android:enabled="@{item.canSendSms}"
            android:onClick="@{()->controller.onSendSms(item)}"
            android:id="@+id/smsButton"/>
        <Button
            android:focusable="false"
            android:background="@drawable/outline_email_24"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="15dp"
            android:layout_gravity="end"
            android:enabled="@{item.canSendEmail}"
            android:onClick="@{()->controller.onSendEmail(item)}"
            android:id="@+id/emailButton"/>
        <Button
            android:focusable="false"
            android:background="@drawable/outline_clear_24"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="15dp"
            android:layout_gravity="end"
            android:onClick="@{()->controller.onRemoveContact(item)}"
            android:id="@+id/removeButton"/>

    </LinearLayout>


</layout>