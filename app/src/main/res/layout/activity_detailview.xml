<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="controller"
            type="org.quynhnguyen.mobile.android.todoApp.DetailViewActivity" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <com.google.android.material.textfield.TextInputLayout
            app:layout_constraintTop_toTopOf="parent"
            app:hintEnabled="true"
            android:error="@{controller.errorStatus}"
            android:id="@+id/itemNameWrapper"
            android:hint="Name"
            android:padding="15dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <com.google.android.material.textfield.TextInputEditText
                android:onFocusChange="@{(v,c) -> controller.onNameInputCompleted(c)}"
                android:onTextChanged="@{(a,s,b,c) -> controller.onNameInputChanged()}"
                android:id="@+id/itemName"
                android:text="@={controller.item.itemName}"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <requestFocus/>
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            app:layout_constraintTop_toBottomOf="@+id/itemNameWrapper"
            android:orientation="horizontal"
            android:id="@+id/buttonRow"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <CheckBox
                android:id="@+id/itemDone"
                android:text="done"
                android:checked="@={controller.item.done}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:id="@+id/itemFavourite"
                android:text="favourite"
                android:checked="@={controller.item.favourite}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            app:layout_constraintTop_toBottomOf="@+id/buttonRow"
            android:orientation="horizontal"
            android:padding="15dp"
            android:id="@+id/datePickerRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/buttonRow"
                android:id="@+id/in_date" />

            <Button
                android:id="@+id/datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expiry_date"
                android:onClick="@{(v) -> controller.showDatePickerDialog(v)}" />
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            app:layout_constraintTop_toBottomOf="@+id/datePickerRow"
            android:orientation="horizontal"
            android:id="@+id/timePickerRow"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/in_time"
                />

            <Button
                android:id="@+id/timePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expiry_time"
                android:onClick="@{(v) -> controller.showTimePickerDialog(v)}" />
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            app:layout_constraintTop_toBottomOf="@+id/timePickerRow"
            android:orientation="horizontal"
            android:id="@+id/contactListLabelRow"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/contactListLabel"
                android:text="Contacts"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <Button
                android:id="@+id/addContact"
                android:background="@drawable/baseline_contacts_white_24dp"
                android:backgroundTint="@color/cardview_dark_background"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:onClick="@{(v) -> controller.selectContact()}"
                />
        </LinearLayout>


        <ListView
            android:id="@+id/contactList"
            app:layout_constraintTop_toBottomOf="@+id/contactListLabelRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context="org.quynhnguyen.mobile.android.todoApp.DetailViewActivity">
        </ListView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/itemDescriptionWrapper"
            app:layout_constraintTop_toBottomOf="@+id/contactList"
            app:hintEnabled="true"
            android:hint="Description"
            android:padding="15dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/itemDescription"
                android:gravity="start"
                android:text="@={controller.item.description}"
                android:lines="10"
                android:minLines="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/saveButton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/baseline_save_white_24dp"
            android:onClick="@{() -> controller.onSaveItem()}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
